<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SberCities" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Primary">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Primary.Header">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Primary.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Secondary">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Secondary.Color">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextView.Secondary.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Primary.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Primary.White.Big">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextView.Primary.White.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundedImageViewRounded" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@android:color/white</item>
    </style>

</resources>