<resources>

    <style name="Theme.SberCities" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="toolbarBackground">@color/purple_700</item>
        <item name="cardCityBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="cityDetailBackgroundColor">@color/white</item>
        <item name="scrimToolbarTitleStart">@color/white</item>
        <item name="scrimToolbarTitleCenter">@color/white_70</item>
        <item name="scrimToolbarTitleEnd">@android:color/transparent</item>
        <item name="cityDetailContentBackground">?attr/colorPrimary</item>
        <item name="icLauncherBackground">@color/green</item>
        <item name="mainTextColor">@color/gray_700</item>
        <item name="iconColorDark">@color/black</item>
    </style>

    <style name="Text" />

    <style name="Text.Primary">
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Primary.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Primary.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Secondary" />

    <style name="Text.Secondary.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Secondary.Black">
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>

    <style name="Text.Secondary.White.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Secondary.Black.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Secondary.White.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Secondary.White.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Secondary.White.Big">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="RoundedImageViewRounded" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>